{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "virtualMachineName": {
        "type": "string",
        "defaultValue": "comp1"
      }
    },
    "variables": {
    },
    "resources": [
      {
        "apiVersion": "2015-06-15",
        "type": "Microsoft.Compute/virtualMachines/extensions",
        "name": "[concat(parameters('virtualMachineName'),'/Microsoft.Powershell.DSC')]",
        "location": "[resourceGroup().location]",
        "dependsOn": ["[concat(parameters('virtualMachineName'))]"],
        "properties": {
          "publisher": "Microsoft.Powershell",
          "type": "DSC",
          "typeHandlerVersion": "2.26",
          "autoUpgradeMinorVersion": true,
          "forceUpdateTag": "1.1",
          "settings": {
            "modulesUrl": "https://github.com/BOSKA-94/Azure/raw/master/Task4/BindingDSC.zip",
            "wmfVersion": "latest",
            "ConfigurationFunction": "BindingDSC.ps1\\Binding"
          }
        }
      }
    ],
    "outputs": {
    }
}